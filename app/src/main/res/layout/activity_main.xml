<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--  ctrl +alt +/ : format dÃ²ng code-->

    <TextView
        android:id="@+id/text4"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#f20"
        android:text="Top Content Here"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:textColor="#ffff"
                android:background="#45CF5D"
                android:text="First"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:textColor="#ffff"
                android:background="#1E88E5"
                android:text="Second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="30sp"
                android:textColor="#ffff"
                android:background="#C0CA33"
                android:text="Three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text3"
        android:layout_above="@+id/text4"
        android:layout_toLeftOf="@+id/text4"
        android:background="#E3CC08"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="3"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text2"
        android:layout_above="@+id/text3"
        android:layout_toLeftOf="@+id/text3"
        android:background="#4CAF50"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="2"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_above="@+id/text2"
        android:layout_toLeftOf="@+id/text2"
        android:background="#E60618"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:text="1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="40sp"
        android:paddingVertical="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:background="#856F6C"
        android:text="Bottom Content Here"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>