<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!--  ctrl +alt +/ : format dÃ²ng code-->

    <TextView
        android:id="@+id/textviewBule"
        android:textColor="#ffff"
        android:background="#0022FF"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffff"
        android:background="#22FF00"
        android:id="@+id/textviewGeen"
        android:layout_alignLeft="@+id/textviewBule"
        android:layout_above="@+id/textviewBule"
        android:textSize="30sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffff"
        android:background="#FF0000"
        android:id="@+id/textviewRed"
        android:layout_alignLeft="@+id/textviewGeen"
        android:layout_above="@+id/textviewGeen"
        android:textSize="30sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffff"
        android:background="#FF7E22"
        android:id="@+id/textviewOrange"
        android:layout_alignLeft="@+id/textviewBule"
        android:layout_below="@+id/textviewBule"
        android:textSize="30sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffff"
        android:background="#8D859C"
        android:id="@+id/textviewGray"
        android:layout_alignLeft="@+id/textviewOrange"
        android:layout_below="@+id/textviewOrange"
        android:textSize="30sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffff"
        android:background="#9C27B0"
        android:id="@+id/textviewPink"
        android:layout_alignLeft="@+id/textviewGray"
        android:layout_below="@+id/textviewGray"
        android:textSize="30sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
